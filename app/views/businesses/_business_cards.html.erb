<% if @businesses.respond_to?('each') %>
  <% @businesses.each do |business| %>
    <div class="col-md-3">
      <div class="business-card">
        <div class="card border-light mb-3" style="max-width: 18rem;">
        <div class="card-header" style="font-size: 25px"><%= business.business_name %>
          <div class="social-media">
            <span><a href="http://www.facebook.com"><i class="fab fa-facebook-square"></i></a></span>
            <span><a href="http://"><i class="fab fa-twitter-square"></i></a></span>
            <span><a href="#"><i class="fab fa-youtube-square"></i></a></span>
            <span><a href="#"><i class="fab fa-linkedin"></i></a></span>
            <span><a href="#"><i class="fab fa-instagram"></i></a></span>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= business.category.name %></h5>
          <p class="card-text"><%= business.business_description %></p>
        </div>
        <a href="businesses/<%= business.id %>" class="btn btn-lg btn-info"> View Profile</a>
       </div>
      </div>
    </div>
  <% end %>
  <% else %>
  <h1> No businesses registered yet</h1>
<% end %>